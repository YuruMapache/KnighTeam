<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caballero"
    android:theme="@style/ThemeOverlay.JustaJuan.FullscreenContainer"
    tools:context=".MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <GridLayout
            android:id="@+id/botonesAcciones"
            android:layout_width="235dp"
            android:layout_height="122dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="5dp"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Button" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Button" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Button" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Button" />
        </GridLayout>

        <LinearLayout
            android:layout_width="402dp"
            android:layout_height="122dp"
            android:layout_gravity="start|bottom"
            android:background="@drawable/pergamino">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:text="Hola Caballero. Los hechos acontecidos en el combate anterior han sido ..."
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="402dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:background="@drawable/pergamino"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="@string/recursosFeudo"
                android:textStyle="bold"
                android:visibility="visible" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="311dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="108dp"
                            android:layout_height="38dp"
                            app:srcCompat="@drawable/gold" />

                        <TextView
                            android:id="@+id/Text1"
                            android:layout_width="266dp"
                            android:layout_height="50dp"
                            android:paddingTop="15dp"
                            android:text="1000 monedas"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            app:srcCompat="@drawable/espada" />

                        <TextView
                            android:id="@+id/TiempoEspada"
                            android:layout_width="261dp"
                            android:layout_height="50dp"
                            android:paddingTop="15dp"
                            android:text="Deteriorada"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="108dp"
                            android:layout_height="38dp"
                            app:srcCompat="@drawable/herradura" />

                        <TextView
                            android:id="@+id/TiempoArmadura"
                            android:layout_width="266dp"
                            android:layout_height="50dp"
                            android:paddingTop="15dp"
                            android:text="10"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="281dp"
            android:layout_height="107dp"
            android:layout_margin="10dp"
            android:background="@drawable/pergamino"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextoProximoTorneo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/TiempoHastaTorneo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextoSemanas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/tiempoTorneo"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>
    </FrameLayout>

</FrameLayout>