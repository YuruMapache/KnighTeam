<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaInicio">

    <ImageView
        android:id="@+id/tituloPrincipal"
        android:layout_width="537dp"
        android:layout_height="222dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/justa_juan_titulo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:id="@+id/nombreUsuarioEtiqueta"
                android:layout_width="138dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:text="Nombre Jugador: "
                android:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nombreUsuario"
                android:layout_width="138dp"
                android:layout_height="61dp"
                android:text="" />

            <TextView
                android:id="@+id/numeroSalaEtiqueta"
                android:layout_width="138dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:text="NÃºmero de sala" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/numeroSala"
                android:layout_width="138dp"
                android:layout_height="61dp"/>
        </GridLayout>

    </LinearLayout>


</FrameLayout>