<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaJugador">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/fondoinicioapp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/nombreUsuarioEtiqueta"
                android:layout_width="138dp"
                android:layout_height="61dp"
                android:fontFamily="sans-serif"
                android:text="Nombre Jugador: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nombreUsuario"
                android:layout_width="138dp"
                android:layout_height="61dp"
                android:text="" />

            <TextView
                android:id="@+id/numeroSalaEtiqueta"
                android:layout_width="138dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="NÃºmero de sala: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numeroSala"
                android:layout_width="138dp"
                android:layout_height="61dp"
                android:text=""/>
        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonJugar"
            android:layout_width="144dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/rock_button"
            android:text="JUGAR"
            android:textColor="@color/black" />

    </LinearLayout>


</FrameLayout>