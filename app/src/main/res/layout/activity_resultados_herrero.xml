<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultadosHerrero"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/herrero_fondo_vacio"
    android:orientation="vertical">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/herreropixel"
        android:layout_gravity="center"
        android:layout_marginBottom="-30dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:background="@drawable/pergamino"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/hola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:padding="25dp"
            android:text="Â¡Hola! Estos han sido los resultados de la justa:"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

        <ScrollView
            android:layout_width="800dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/resultados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonSiguienteResult"
            android:layout_width="123dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rock_button"
            android:onClick="avanzarResultados"
            android:text="@string/botonSiguiente"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>