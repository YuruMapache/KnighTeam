<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accionesPopUpAlpha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/PergaminoAcciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"

        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:gravity="top|start"
            android:text="ACCIONES DISPONIBLES"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="46dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:columnCount="3"
                android:rowCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="20dp"
                    android:text="Habilidad Esgrima: "
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="20dp"
                    android:text="1/10"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/botonSubirEsgrima"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="15dp"
                    android:background="@drawable/rock_button"
                    android:text="@string/simboloMas"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="20dp"
                    android:text="Habilidad Montar: "
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="20dp"
                    android:text="1/10"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/botonSubirMontar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="15dp"
                    android:background="@drawable/rock_button"
                    android:text="@string/simboloMas"
                    android:textColor="@color/black" />

            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:columnCount="3"
                android:rowCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="start|center"
                    android:text="Crear pocion bÃ¡sica"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="start|center"
                    android:layout_margin="20dp"
                    android:text="Actual (0)"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/botonCrearPocionBasica"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="15dp"
                    android:background="@drawable/rock_button"
                    android:text="@string/simboloMas"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="start|center"
                    android:text="Crear vendaje"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="start|center"
                    android:layout_margin="20dp"
                    android:text="Actual (0)"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="107dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/botonCrearVendaje"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="15dp"
                    android:background="@drawable/rock_button"
                    android:text="@string/simboloMas"
                    android:textColor="@color/black" />

            </GridLayout>



        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonAtras"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"

            android:text="@string/botonAtras"

            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>