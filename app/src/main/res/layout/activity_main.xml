<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.JustaJuan.FullscreenContainer"
    tools:context=".MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/TextoProximoTorneo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="top|start"
                android:text="@string/TiempoHastaTorneo"/>

            <TextView
                android:id="@+id/TextoSemanas"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="top|start"
                android:text="@string/tiempoTorneo"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            >

            <GridView
                android:id="@+id/materiales_main"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:numColumns="2"
                android:layout_margin="5dp"/>


        </LinearLayout>


        <GridLayout
            android:id="@+id/fullscreen_content_controls"
            style="@style/Widget.Theme.JustaJuan.ButtonBar.Fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            android:useDefaultMargins="true"
            android:layout_margin="5dp"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:text="@string/dummy_button" />

            <Button
                android:id="@+id/dummy_button2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:text="@string/dummy_button" />

            <Button
                android:id="@+id/dummy_button3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:text="@string/dummy_button" />

            <Button
                android:id="@+id/dummy_button4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:text="@string/dummy_button" />

        </GridLayout>
    </FrameLayout>

</FrameLayout>